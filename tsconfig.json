{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"paths": {
			"react": ["./node_modules/@types/react"]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"jsx": "react"
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
